plc = snap7.client.Client()
plc.connect("10.10.144.135",0,2)
print(plc.get_connected())
##  READ FROM PLC 317 starting from input E0.5 8 bits into  buffer
byte2=plc.read_area(snap7.snap7types.S7AreaPE,0,5,8)
##  print state of  each bit to  console
for index in range(8):
    print (snap7.util.get_bool(byte2,0,index))
